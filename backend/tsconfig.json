{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext", // Changed for native ESM output
    "moduleResolution": "NodeNext", // Changed for native ESM resolution
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "noEmit": false
  },
  "include": ["src", "__tests__"]
}
